<h1>Post Index Page</h1>
<% @posts.each do |post| %>
  <h5><strong><%= post.title %></strong></h5>
  <p><%= post.content %></p>
  <p><%= post.website_url %></p>
  <%= link_to "Delete Post",
      post_path(post),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
      class: "btn btn-danger"
  %>
<% end %>

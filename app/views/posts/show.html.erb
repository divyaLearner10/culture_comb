<div class="container show-form" style="max-width: 50%">
    <div class="row">
      <div class="show-form-heading">
        <h3>Post Unwrapped: Explore the Details!</h3>
      </div>
    </div>
    <div class="row">
      <%= cl_image_tag @post.photo.key, class: "show-form-img", alt: @post.title %>
    </div>
    <div class="row">
      <div class="col-12 col-lg-9">
        <div class="border-bottom mt-3 mb-3">
          <h3 class="name-show mt-3"><%= @post.title %></h3>
          <p class="info-show"><i class="fa-regular fa-rectangle-list"></i> <%= @post.content %></p>
        </div>
      </div>
      <div class="col-12 col-lg-3">
        <div class="dive-back border">
          <h5>Want to Explore more?</h5>
          <i class="fa-regular fa-hand-point-left fa-beat"></i> <%= link_to "Dive Back", city_community_path(@city, @community) %>
        </div>
      </div>
      <div class="border-bottom mt-2 mb-3">
        <h6 class="description-show">Discover More!</h6>
        <a class="info-show" href="<%= @post.website_url %>"><i class="fa-solid fa-link"></i> <%= @post.website_url %></a>
      </div>

    </div>
    <div class="row show-map-section">
    <h6 class="map-heading"> Explore the Post's Location!</h6>
      <div class="container">
        <div class="map-show"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY']%>">
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container event-show">

  <div class="row">
  <h1><strong>Post</strong></h1>
    <div class="col-12 col-lg-6">
      <div class="container pb-3 mt-0" id="event-show">
      <%= cl_image_tag @post.photo.key, class: "img-fluid", alt: @post.title %>

        <div class="border-bottom mt-3 mb-3">
          <h2 class="event-name mt-3"><%= @post.title %></h2>
        </div>

        <div class="border-bottom mt-3 mb-3 event-url">
          <p> <%= @post.website_url %> </p>
        </div>

        <div class="border-bottom mt-3 mb-3 event-description">
          <p> <%= @post.content %> </p>
        </div>

      </div>
    </div>
    <div class="col-12 col-lg-6">
      <div class="container pt-0">
        <div style="width: 100%; height: 600px;"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY']%>">
        </div>
      </div>
    </div>
  </div>
</div>

<% if message.user == current_user %>
  <div id="message-<%= message.id %>" style="text-align:right;">
    <small>

      <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
      <strong><%= message.user.first_name %><%= cl_image_tag message.user.photo.key, class: "avatar"%></strong>
    </small>
    <p><%= message.content %></p>
  </div>
<% else %>
  <div id="message-<%= message.id %>">
    <small>
      <strong><%= cl_image_tag message.user.photo.key, class: "avatar"%><%= message.user.first_name %></strong>
      <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
    </small>
    <p><%= message.content %></p>
  </div>
<% end %>

<div class="container">
  <div class="index">
    <% if current_user.admin? %>
      <div class="row">
        <div class="col-12 col-lg-9 border events-left">
          <div class="events-heading border mt-3">
            <h3>City Hopping Made Easy: Explore our Best Cities!</h3>
          </div>

          <div class="cards">
            <% @cities.each do |city| %>
              <div class="card" >
                <%= link_to city_path(city) do %>
                  <%= cl_image_tag city.photo.key, class: "card-img-top event-card-img", alt: city.name %>
                <% end %>

                <div class="card-body">
                  <h5 class="card-title" style="text-align:center;"><%= city.name %></h5>
                  <p class="card-text"><i class="fa-regular fa-rectangle-list"></i> <%= city.description %></p>
                </div>

                <div class="icon-actions">
                  <a href=<%= edit_city_path(city) %>><i class="fa-solid fa-pen-to-square"></i></a>
                  <a href=<%= city_path(city) %>><i class="fa-solid fa-trash-can"></i></a>
                </div>

              </div>
            <% end %>
          </div>
        </div>

        <div class="col-12 col-lg-3 border events-right">
          <div class="event-options">
            <div class="new-event border">
              <h5 style="color:rgb(6, 128, 128);">Unleash New Horizons: Contribute a City to Our Growing Network!</h5>
              <!-- <i class="fa-regular fa-square-plus fa-beat"></i></i> <%= link_to 'Add New city', new_city_path %> -->
              <%= render "new"%>
            </div>
          </div>
        </div>
      </div>
    <% else %>
      <div class="row">
        <div class="col-12 col-lg-12 border events-left">
          <div class="events-heading border mt-3">
            <h3>Eventopia: Unleash the Experience</h3>
          </div>
          <div class="cards">
          <% @cities.each do |city| %>
            <div class="card" >
              <%= link_to city_path(city) do %>
                <%= cl_image_tag city.photo.key, class: "card-img-top event-card-img", alt: city.name %>
              <% end %>
              <div class="card-body">
                <h5 class="card-title" style="text-align:center;"><%= city.name %></h5>
                <p class="card-text"><i class="fa-regular fa-rectangle-list"></i> <%= city.description %></p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

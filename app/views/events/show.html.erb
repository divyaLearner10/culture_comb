<div class="container event-show">

  <div class="row">
  <h1><strong>Event</strong></h1>
    <div class="col-12 col-lg-6">
      <div class="container pb-3 mt-0" id="event-show">
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <% @event.photos.each_slice(1).with_index do |events_slice, index| %>
                <div class="carousel-item <%= 'active' if index == 0 %>">
                  <div class="row">
                    <% events_slice.each do |event| %>
                      <%= cl_image_tag event.key, class: "img-fluid", alt: event.name %>
                    <% end %>
                  </div>
                </div>
              <% end %>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>

        <div class="border-bottom mt-3 mb-3">
          <h2 class="event-name mt-3"><%= @event.name %></h2>
          <h4 class="event-address"> <i class="fa-solid fa-location-dot"></i> <%= @event.address %> </h4>
          <h5 class="event-time"> </i> <%= @event.start_time %>  </h5>
        </div>

        <div class="border-bottom mt-3 mb-3 event-url">
          <p> <%= @event.website_url %> </p>
        </div>

        <div class="border-bottom mt-3 mb-3 event-description">
          <p> <%= @event.description %> </p>
        </div>

      </div>
    </div>
    <div class="col-12 col-lg-6">
      <div class="container pt-0">
        <div style="width: 100%; height: 600px;"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY']%>">
        </div>
      </div>
    </div>
  </div>
</div>

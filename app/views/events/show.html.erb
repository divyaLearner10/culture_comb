<div class="container show-form" style="max-width: 50%">
    <div class="row">
      <div class="show-form-heading">
        <h3>Event Unwrapped: Explore the Details!</h3>
      </div>
    </div>
    <div class="row">
      <% @event.photos.each_slice(1).with_index do |events_slice, index| %>
        <% events_slice.each do |event| %>
          <%= cl_image_tag event.key, class:"show-form-img", alt: event.name %>
        <% end %>
      <% end %>
    </div>
    <div class="row">
      <div class="col-12 col-lg-9">
        <div class="border-bottom mt-3 mb-3">
          <h3 class="name-show mt-3"><%= @event.name %></h3>
          <h5 class="info-show"> <i class="fa-solid fa-location-dot"></i> <%= @event.address %> </h5>
          <p class="info-show"> <i class="fa-solid fa-calendar-days"></i> <%= @event.date %>  </p>
          <p class="info-show"><i class="fa-solid fa-clock"></i> <%= @event.start_time %></p>
        </div>
      </div>
      <div class="col-12 col-lg-3">
        <div class="dive-back border">
          <h5>Want to Explore more?</h5>
          <i class="fa-regular fa-hand-point-left fa-beat"></i> <%= link_to "Dive Back!", city_events_path(@city) %>
        </div>
      </div>
      <div class="border-bottom mt-2 mb-3">
        <p class="info-show"><i class="fa-regular fa-rectangle-list"></i> <%= @event.description %></p>
      </div>
      <div class="border-bottom mt-2 mb-3">
        <h6 class="description-show">Discover More!</h6>
        <a class="info-show" href="<%= @event.website_url %>"><i class="fa-solid fa-link"></i> <%= @event.website_url %></a>
      </div>
      <div class="border-bottom mt-2 mb-3">
        <h6 class="description-show">Let's Stay Connected!</h6>
        <p class="info-show"><i class="fa-solid fa-square-phone"></i> <%= @event.phone_number %></p>
      </div>


    </div>
    <div class="row show-map-section">
      <h6 class="map-heading">Find Your Way to the Event!</h6>
      <div class="container">
        <div class="map-show"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY']%>">
        </div>
      </div>
    </div>
  </div>
</div>

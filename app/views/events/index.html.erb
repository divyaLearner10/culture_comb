<h1>Event Index Page</h1>
<% @events.each do |event| %>
  <h5><strong><%= event.name %></strong></h5>
  <p><%= event.description %></p>
  <p><%= event.website_url %></p>
  <p><%= event.date %></p>
  <p><%= event.address %></p>
  <p><%= event.phone_number %></p>
  <p><%= event.start_time %></p>
  <%= link_to "Update Event",
      edit_city_event_path(@city, event),
      class: "btn btn-secondary"
  %>
  <%= link_to "Delete Event",
      event_path(event),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
      class: "btn btn-danger"
  %>
<% end %>

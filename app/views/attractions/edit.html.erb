<div class="edit-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),
        url('<%= cl_image_path(@city.photo.key) %>');">
  <div class="container">
    <div class="edit-form-heading mt-3">
      <h3>Refresh City's Charm: Update Attractions!</h3>
    </div>
    <%= simple_form_for([@city, @attraction], html: { class: "edit-form" }) do |f|%>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :address %>
      <%= f.input :opening_hours %>
      <%= f.input :website_url %>
      <%= f.input :photo, as: :file %>
      <%= f.button :submit, "Update attraction", class: "btn btn-primary w-100 edit-form-submit" %>
    <% end %>
  </div>
</div>

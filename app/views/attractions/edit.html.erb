<h1>Attractions Edit Page</h1>
<%= simple_form_for([@city, @attraction], html: { class: "edit-form" }) do |f|%>
  <%= cl_image_tag @attraction.photo.key, height: 300, width: 400, crop: :fill %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :address %>
  <%= f.input :opening_hours %>
  <%= f.input :website_url %>
  <%= f.input :photo, as: :file %>
  <%= f.button :submit, "Update attraction", class: "btn btn-secondary" %>
<% end %>

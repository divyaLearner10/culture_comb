<%= simple_form_for([@city, @attraction], html: { class: "new-form" }) do |f|%>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :address %>
  <%= f.input :opening_hours %>
  <%= f.input :website_url %>
  <%= f.input :photo, label: "Upload Image", as: :file %>
  <%= f.button :submit, "Add attraction", class: "btn btn-primary w-100 new-form-submit"%>
<% end %>

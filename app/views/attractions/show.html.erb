<div class="container event-show">

  <div class="row">
  <h1><strong>Attraction</strong></h1>
    <div class="col-12 col-lg-6">
      <div class="container pb-3 mt-0" id="event-show">
      <%= cl_image_tag @attraction.photo.key, class: "img-fluid", alt: @attraction.name %>

        <div class="border-bottom mt-3 mb-3">
          <h2 class="event-name mt-3"><%= @attraction.name %></h2>
          <h4 class="event-address"> <i class="fa-solid fa-location-dot"></i> <%= @attraction.address %> </h4>
          <h5 class="event-time"> </i> <%= @attraction.opening_hours %>  </h5>
        </div>

        <div class="border-bottom mt-3 mb-3 event-url">
          <p> <%= @attraction.website_url %> </p>
        </div>

        <div class="border-bottom mt-3 mb-3 event-description">
          <p> <%= @attraction.description %> </p>
        </div>

      </div>
    </div>
    <div class="col-12 col-lg-6">
      <div class="container pt-0">
        <div style="width: 100%; height: 600px;"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY']%>">
        </div>
      </div>
    </div>
  </div>
</div>

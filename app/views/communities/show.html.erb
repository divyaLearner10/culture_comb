<div class="container">
<% if @community.name == "Brazilian" %>
 <h1><%= "Welcome to the ðŸ‡§ðŸ‡· " + @community.name + " community!" %></h1>
<% else %>
 <h1><%= "Welcome to the ðŸ‡«ðŸ‡· " + @community.name + " community!" %></h1>
<% end %>
<!-- Link to create a new event -->
<a href="<%= new_city_community_event_path(@community.city, @community) %>"> ï¼‹ New Event </a>
<!-- Link to create a new post -->
<a href="<%= new_city_community_post_path(@community.city, @community) %>"> ï¼‹ New Post</a>

<div class="row">
  <div class="cards">
    <% @events.each do |event| %>
      <div class="card" >
        <% if event.photos.any? %>
          <%= link_to city_community_event_path(@city,@community, event) do %>
            <%= cl_image_tag event.photos.last.key, class: "card-img-top event-card-img", alt: event.name %>
          <% end %>
        <% else %>
          <!-- Display a placeholder image or default image if no photos are available -->
          <%= image_tag "placeholder.jpg", class: "card-img-top", alt: "Placeholder Image" %>
        <% end %>

        <div class="card-body">
          <h5 class="card-title"><%= event.name %></h5>
          <p class="card-text"><i class="fa-solid fa-location-dot"></i> <%= event.address %></p>
        </div>
        <a href=<%= edit_city_event_path(@city, event) %> class="btn btn-secondary">Update Event</a>
        <a href=<%= event_path(event) %> class="btn btn-danger">Delete Event</a>
      </div>
    <% end %>
  </div>
</div>
<div class="container post-index">
  <h1>All Posts</h1>
  <div class="col-12">
    <div class="accordion" id="accordionExample">
      <% @posts.each do |post| %>
        <div class="accordion-item">
          <h2 class="accordion-header">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
              <%= post.title %>
            </button>
          </h2>
          <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
            <div class="card" id="post-card">
              <div class="row">
                <div class="col-sm-2 post-image">
                  <%= link_to city_post_path(@city, post) do %>
                    <%= cl_image_tag post.photo.key, class: "img-top", alt: post.title %>
                  <% end %>
                </div>
                <div class="col-sm-8">
                  <div class="card-body">
                    <h5 class="card-title"><%= post.title %></h5>
                    <p class="card-text"><%= post.content %></p>
                    <p class="card-text"><%= post.website_url %></p>
                  </div>
                </div>
                <div class="col-sm-2">
                  <%= link_to "Update Post",
                    edit_city_post_path(@city, post),
                    class: "btn btn-secondary"
                  %>
                  <%= link_to "Delete Post",
                    post_path(post),
                    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
                    class: "btn btn-danger"
                  %>
                </div>
              </div>
            </div>
          </div>
      </div>

      <% end %>
    </div>
  </div>
</div>

</div>

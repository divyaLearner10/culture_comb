<div class="index-renting-space">
  <div class="container">
    <h1 style="text-align: center;">All Communities</h1>
    <div class="row">
      <div class="cards">
        <% @communities.each do |community| %>
          <div class="card">
            <%= link_to city_community_path(@city, community) do %>
              <div class="card-body">
                <h5 class="card-title"><%= community.name %></h5>
                <p class="card-text mb-1"><%= community.description %></p>
              </div>
            <% end %>
            <% if current_user.admin? %>
              <a href=<%= edit_city_community_path(@city, community) %> class="btn btn-secondary">Update Community</a>
              <a href=<%= community_path(community) %> class="btn btn-danger">Delete Community</a>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
